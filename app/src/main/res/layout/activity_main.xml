<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">

    <!--Flashcard question-->
    <TextView
        android:id="@+id/flashcardQuestion"
        android:background="@drawable/question_bg"
        android:padding="5dp"
        android:layout_marginBottom="40dp"

        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:text="What was the Easter Bunny's original name?"
        android:textSize="40sp"
        android:gravity="center"/>

    <!--Answer choice 1-->
    <TextView
        android:id="@+id/answer1"
        android:background="#E2E0E5"
        android:padding="5dp"
        android:gravity="center"

        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/flashcardQuestion"


        android:text="Osterhase"
        android:textSize="40sp" />

    <!--Answer choice 2-->
    <TextView
        android:id="@+id/answer2"
        android:background="#E2E0E5"
        android:padding="5dp"
        android:gravity="center"

        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/answer1"


        android:text="Rudolph"
        android:textSize="40sp" />

    <!--Answer choice 3-->
    <TextView
        android:id="@+id/answer3"
        android:background="#E2E0E5"
        android:padding="5dp"
        android:gravity="center"

        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/answer2"


        android:text="Peter Cottontail"
        android:textSize="40sp" />

    <!--Answer choice 4-->
    <TextView
        android:id="@+id/answer4"
        android:background="#E2E0E5"
        android:padding="5dp"
        android:gravity="center"

        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/answer3"


        android:text="Saint Hazel"
        android:textSize="40sp" />

    <!--Refresh icon-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/refreshIcon"
        android:src="@drawable/refresh"


        android:layout_below="@id/answer4"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true" />

    <!--Visibility icon-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/visibleIcon"
        android:src="@drawable/visible"

        android:layout_below="@id/answer4"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true" />

    <!--Invisibility Icon-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/invisibleIcon"
        android:src="@drawable/invisible"

        android:layout_below="@id/answer4"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"

        android:visibility="invisible" />


</RelativeLayout>